<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_top_title"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oopss"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_not_found"
        app:layout_constraintEnd_toEndOf="@+id/iv_not_found"
        app:layout_constraintStart_toStartOf="@+id/iv_not_found"/>

    <ImageView
        android:id="@+id/iv_not_found"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/search_notfound"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/user_not_found"/>

    <TextView
        android:id="@+id/tv_bottom_title"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/not_found"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_not_found"
        app:layout_constraintStart_toStartOf="@+id/iv_not_found"
        app:layout_constraintTop_toBottomOf="@+id/iv_not_found" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notfound_message"
        android:textColor="@color/grey500"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_bottom_title"
        app:layout_constraintStart_toStartOf="@id/tv_bottom_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottom_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>